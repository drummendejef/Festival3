        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Band info" VerticalAlignment="Top" Width="68"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" Text="Naam" VerticalAlignment="Top" Width="120"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="120" ToolTip="Podium"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="68"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="118,119,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,86,0,0" TextWrapping="Wrap" Text="Tijden" VerticalAlignment="Top" Width="102"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="66,86,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,-0.273"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="10,156,0,0" TextWrapping="Wrap" Text="Beschrijving" VerticalAlignment="Top" Width="176"/>
        <Image HorizontalAlignment="Left" Height="75" Margin="10,185,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="90,201,0,0" TextWrapping="Wrap" Text="Genres" VerticalAlignment="Top" Height="44" Width="62"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="90,234,0,0" VerticalAlignment="Top" Width="22" ToolTip="Facebook"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="130,234,0,0" VerticalAlignment="Top" Width="22" ToolTip="Twitter"/>
    </Grid>
</UserControl>
